<Page x:Class="занятие_1.appPages.User"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:занятие_1.appPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User">

    <Grid>
        <DataGrid x:Name="DgridView" Margin="10" AutoGenerateColumns="False" Grid.ColumnSpan="3" Grid.Row="1" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Header="id"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Имя"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding SurName}" Header="Фамилия"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Email}" Header="Логин"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Password}" Header="Пароль"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
