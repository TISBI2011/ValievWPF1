<Page x:Class="KitaiskayaKuhnya.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KitaiskayaKuhnya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Width="200" Background="Red">
            <TextBlock Text="login"/>
            <TextBox x:Name="TBlogin" Background="Yellow"/>
            <TextBlock Text="parol"/>
            <TextBox x:Name="TBparol" Background="Yellow"/>
            <Button x:Name="LoginButton" Content="Войти" Margin="10" Click="LoginButton_Click" Background="Yellow"/>
        </StackPanel>
        
    </Grid>
</Page>
